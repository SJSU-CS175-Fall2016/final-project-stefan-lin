<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/event_record_single"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_marginTop="5dp"
              android:layout_marginBottom="10dp"
              android:layout_height="wrap_content"
              android:layout_marginLeft="10dp"
              android:layout_marginRight="10dp"
              android:paddingTop="2dp"
              android:paddingBottom="5dp"
              android:paddingRight="5dp"
              android:background="#fff">
  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:elevation="3dp"
      android:layout_margin="10dp">
  <LinearLayout
    android:layout_width="50dp"
      android:layout_height="wrap_content"
      android:gravity="center_vertical"
      android:orientation="vertical"
      android:elevation="5dp">

    <ImageView
        android:src="@drawable/ic_event_grey_500_36dp"
        android:id="@+id/events"
        android:padding="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        />
  </LinearLayout>
  <LinearLayout
      android:orientation="vertical"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content">
  <TextView
      android:id="@+id/event_record_title"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:textStyle="bold"
      android:textColor="@color/mainBG"
      android:text="Sample text"/>
    <TextView
        android:id="@+id/event_record_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="italic"
        android:text="Date"/>
  <TextView
      android:id="@+id/event_record_description"
      android:layout_width="fill_parent"
      android:layout_gravity="center_vertical"

      android:text="This is example description of finance text. More and more text will be here. This is filler text."
      android:layout_height="wrap_content"/>
    </LinearLayout>
    </LinearLayout>
  </LinearLayout>
