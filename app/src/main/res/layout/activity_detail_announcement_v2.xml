<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              xmlns:card_view="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              tools:context=".DetailActivity">
  <android.support.v7.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="6dp">
    <LinearLayout
      android:transitionName="transAllSections"
      android:orientation="vertical"
      android:layout_width="match_parent"
      android:layout_height="wrap_content">
      <LinearLayout
        android:transitionName="transTopSection"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="60sp">
        <!-- Top Section -->
        <LinearLayout
          android:layout_margin="8dp"
          android:layout_width="wrap_content"
          android:layout_height="match_parent">
          <com.github.siyamed.shapeimageview.CircularImageView
            android:id="@+id/detail_avatar2"
            android:transitionName="transAvatar"
            android:layout_width="40sp"
            android:layout_height="40sp"
            android:src="@mipmap/ic_launcher"
            card_view:siBorderWidth="3dp"
            card_view:siBorderColor="#BFBFBF"/>
        </LinearLayout>
        <LinearLayout
          android:transitionName="transTitleAuthorTime"
          android:layout_marginTop="2dp"
          android:orientation="vertical"
          android:layout_weight="10"
          android:layout_width="0dp"
          android:layout_height="match_parent">
          <TextView
            android:transitionName="transTitle"
            android:id="@+id/detail_title2"
            android:layout_marginLeft="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="24dp"
            android:gravity="left|center_vertical"/>
          <TextView
            android:transitionName="transAuthorTime"
            android:id="@+id/detail_author_and_time2"
            android:layout_marginLeft="16dp"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:textSize="10dp"/>
        </LinearLayout>
      </LinearLayout>
      <!-- Bottom Section -->
      <TextView
        android:transitionName="transContent"
        android:id="@+id/detail_content2"
        android:paddingRight="8dp"
        android:paddingLeft="8dp"
        android:paddingBottom="8dp"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:textSize="20dp" />
    </LinearLayout>
  </android.support.v7.widget.CardView>
</LinearLayout>